# Aurora Hunter Backend Configuration

# Environment
ENVIRONMENT=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=aurora_hunter
DB_USER=your_db_user
DB_PASS=your_db_password

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_MONTHLY=price_your_monthly_price_id
STRIPE_PRICE_LIFETIME=price_your_lifetime_price_id

# JWT Configuration
JWT_SECRET=your-very-long-random-secret-key-change-this
JWT_EXPIRY=3600

# API Configuration
API_BASE_URL=https://yourdomain.com/api
FRONTEND_URL=https://yourdomain.com

# CORS Settings (comma-separated origins for production)
ALLOWED_ORIGINS=*

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600

# Email Configuration (for gift notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=Aurora Hunter

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/aurora-hunter/app.log
